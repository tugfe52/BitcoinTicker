<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/_16sdp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_timer_option_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toStartOf="@id/iv_option_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10 Saniye" />

    <ImageView
        android:id="@+id/iv_option_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:src="@drawable/ic_option_choose"
        app:layout_constraintBottom_toBottomOf="@id/tv_timer_option_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_timer_option_title"
        app:tint="@color/main_blue_color" />


</androidx.constraintlayout.widget.ConstraintLayout>